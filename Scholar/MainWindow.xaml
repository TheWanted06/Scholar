<Window x:Class="Scholar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scholar"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="30,30,30,30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label Content="Please fill in the following" FontSize="20" HorizontalAlignment="Center"/>
                <Label Content="Semester start date"/>
                <DatePicker Name="dpStartDate" Width="120"/>
                <Label Content="Semester Duration (weeks)"/>
                <TextBox x:Name="tbNoOfSemester"  Height="23" TextWrapping="Wrap" Width="120"/>

                <Button x:Name="tbFinish" Content="Continue" Click="tbFinish_Click" Width="75"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
